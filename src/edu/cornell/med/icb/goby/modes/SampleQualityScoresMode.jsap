<jsap>
    <parameters>
        <flaggedOption>
            <id>number-of-reads</id>
            <shortFlag>n</shortFlag>
            <longFlag>number-of-reads</longFlag>
            <stringParser>
                <classname>IntegerStringParser</classname>
            </stringParser>
            <required>false</required>
            <defaults>
                <string>10000</string>
            </defaults>
            <help>The number of reads to process or -1 to process the entire file.</help>
        </flaggedOption>
        <unflaggedOption>
            <id>input</id>
            <required>true</required>
            <greedy>true</greedy>
            <help>The input fasta files to convert to compact reads.  The output files will have the same filename but end in .compact-reads.  If the input file ends in .gz it will be decompressed on the fly.</help>
        </unflaggedOption>
    </parameters>
</jsap>
